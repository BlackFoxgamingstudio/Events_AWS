<div class="pull-right">
	<a href="/events">Events Dashboard</a> | <a href="/logout">Logout</a>
</div>
<div class="container">
	<div class="row">
		<p class="text-center text-danger"><%= flash[:errors] %></p>
		<h1>Edit Your Profile</h1>
		<form class="form-horizontal" action="/users/<%= @user.id %>" method="post">
			<input type="hidden" name="_method" value="put" />
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
			<div class="form-group">
				<label for="first_name">First Name: </label>
				<input class="form-control" type="text" id="first_name" name="user[first_name]" value="<%= @user.first_name %>"/>
			</div>
			<div class="form-group">
				<label for="last_name">Last Name: </label>
				<input class="form-control" type="text" id="last_name" name="user[last_name]" value="<%= @user.last_name %>"/>
			</div>
			<div class="form-group">
				<label for="email">Email: </label>
				<input class="form-control" type="email" id="email" name="user[email]" value="<%= @user.email %>"/>
			</div>
			<div class="form-group">
				<label for="location">Location: </label>
				<input class="form-control" type="text" id="first_name" name="user[location]" value="<%= @user.location %>" />
				<select class="form-control" name="user[state]">
		<% ['OH','WA','NY','MI'].each do |s| 
				if s == @user[:state] %>
					<option value="<%= s %>" selected><%= s %></option>
			<% else %>
					<option value="<%= s %>"><%= s %></option>
		<%  	end 
			end %>
				</select>
			</div>
			<input type="submit" value="Update Records" />
		</form>
	</div>
</div>
