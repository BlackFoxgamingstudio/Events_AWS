<div class="pull-right">
	<a href="/events">Events Dashboard</a> | <a href='/logout'>Logout</a>
</div>
<h1><%= @event.title %></h1>
<div class="row">
	<div class="col-lg-6">
		<h5><%= @event.user.first_name %></h5>
		<h5><%= @event.location %>, <% @event.state %></h5>
		<h5>Number of people joining the event: <%= " guests. COUNT" %></h5>
		<table class="table table-striped table-hover">
			<thead>
				<th>Name</th>
				<th>Location</th>
				<th>State</th>
			</thead>
			<tbody>

				<tr>
					<td>Name</td>
					<td>Location</td>
					<td>State</td>
				</tr>

			</tbody>
		</table>
	</div>
	<div class="col-lg-6">
		<h5>Discussion about this event: </h5>
		<textarea rows="15" class="form-control"><%  %></textarea>
		<form action="/comments" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
			<textarea rows="5" class="form-control" name="comment[content]"></textarea>
			<input type="submit" value="Submit Comment" />
		</form>
	</div>
</div>